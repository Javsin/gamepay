{
  "extends": "next/core-web-vitals",
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "no-unused-vars": "off",
    "no-undef": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"],
        "map": [
          ["@", "./src"],
          ["@/components", "./src/components"],
          ["@/lib", "./src/lib"],
          ["@/types", "./src/types"],
          ["@/context", "./src/context"],
          ["@/action", "./src/actions"],
          ["@/public", "./public"]
        ]
      }
    }
  }
}
